<% title "Clinical Informatics Exam Glossary" %>
<div class = "sites">
  <h1> <%= yield(:title) %> </h1>
</div>

<form accept-charset="UTF-8" action="/informatics" method="get" name="commit" class="form-inline">
  <div class="center">
    <div class="form-group">
    <input type="search" name="search" class="input-large" id="search" placeholder="Search">
    </div>
     <button type="submit" style="margin:1em" class="btn btn-primary ">Search Informatics</button>
     <%= link_to "List all Informatics", "/informatics", class: "btn btn-danger"%><br>
  <label><%= radio_button_tag 'unit', '1',   (params[:unit] == '1')       %>    1. Fundamentals</label><br>
  <label><%= radio_button_tag 'unit', '2',   (params[:unit] == '2')       %>    2. Clinical Decision Making and Care Process Improvement</label><br>
  <label><%= radio_button_tag 'unit', '3',   (params[:unit] == '3')       %>    3. Health Information Systems</label><br>
  <label><%= radio_button_tag 'unit', '4',   (params[:unit] == '4')       %>    4. Leading and Managing Change</label>    
  </form>
 </div> 
<br>

<div class = "providers">
  <h1>
    <% if @informatics.length == 1%>
    1 informatic term matches your search
    <% else %>
    <%= @informatics.length %> informatics terms match your search.
    <% end %>
  </h1>
</div>
  
  <table class="pretty">
    <thead>
      <tr>
        <th><%= sortable  "section" %></th>
        <th><%= sortable  "topic" %></th>
        <th><%= sortable  "acronym" %></th> 
        <th><%= sortable  "information" %></th>
      </tr>         
    </thead>
    <tbody>
      <% @informatics.each do |informatic| %>
        <tr>
          <td><%= informatic.section %></td>
          <td><%= external_link_to informatic.topic, "http://www.google.com/search?q=#{informatic.topic}"  %></td>
          <td><%= informatic.acronym %></td> 
          <td><%= informatic.information %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

