<% title "Clinical Informatics Exam Glossary" %>
<div class = "sites">
  <h1> <%= yield(:title) %> </h1>
</div>

<div class = "informatics">
  <ul class="nav nav-tabs nav-justified" role="tablist">
    <li><%= link_to 'Fundamentals', { 'data-toggle' => 'tab', 'section_id' => '1'} %></li>
    <li><%= link_to 'Decision Making', { 'data-toggle' => 'tab', 'section_id' => '2'} %></li>
    <li><%= link_to 'HIS', { 'data-toggle' => 'tab', 'section_id' => '3'} %></li>
    <li><%= link_to 'Leading Change', { 'data-toggle' => 'tab', 'section_id' => '4'} %></li>
  </ul>
  
<div class="informatics">
  <div class="panel-group" id="accordion">
    
    <% @subheadings.each do |sh| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= "#{sh.id}"%>"><%= sh.code %> <%= sh.subheading %></a>
        </h4>
      </div>
      <div id="collapse<%= "#{sh.id}"%>" class="panel-collapse collapse">
        <div class="panel-body"><table>
 	       <% @informatics = Informatic.where(section: sh.code) %>
 	       <% @informatics.each do |i| %>
          <tr>
            <td style="width: 20%"><%= i.section %> <%= i.topic %></td>
 	          <td style="width: 10%; text-align:center"><%= i.acronym %></td>
 	          <td style="width: 70%"><%= i.information %></td>
          </tr>
 	      <% end %>
 	      </table></div>
      </div>
    </div>
    <% end %>
  </div>
</div>

