<div class = "jewels">
  <% title jewel_collection_title(params[:collection]) %>
  <h1><%= yield(:title) %> COLLECTION </h1>
  
  <% @jewels.in_groups_of(4, false).each do |group| %> 
    <div class='row'>   
      <% group.each do |jewel| %>
        <div class='col-xs-3'>         
          <%= image_tag(jewel.image, width: "100%") %>
          <hr></hr>
          <h4><%= jewel.name %></h4>

<!--
          <div class = "list_actions">
             <%= link_to 'New', new_jewel_path %>
             <%= link_to 'Show', jewel %>
