             <%= link_to 'Destroy', jewel, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>  
-->               
        </div>
      <% end %>
    </div>
  <% end %>
  <h1></h1>
  <div class = "center">
    <%= link_to 'BAUBLE', jewels_path(:collection => "bauble") %> | 
    <%= link_to 'CALI', jewels_path(:collection => "cali") %> |
    <%= link_to 'SURF', jewels_path(:collection => "surf") %> |
    <%= link_to 'OCEANIA', jewels_path(:collection => "oceania") %> |
    <%= link_to 'FACETS', jewels_path(:collection => "facets") %>
  </div>
</div>