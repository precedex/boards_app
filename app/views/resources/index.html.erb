<h1><%=params[:category] %>s</h1>
<table>
    <% @resources.each do |resource| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
		  <td>
			  <%= image_tag(resource.image_url, class: 'list_image') %>
		  </td>
		  <td class="list_description">
			  <dl> 
				  <a href="<%= resource.link %>">
				  <dt><%= resource.title %></a></dt>
				  
			<% unless resource.category == "Website" %>	  
				  <dd style="font-size: x-small; font-weight: bold">
					  latest edition: <%= resource.edition %> (<%= resource.year%>)</dd>
				  <dd style="font-size: x-small; font-style: italic">
					  category: <%= resource.category %> </dd><br/>
			<% end %>		  
					  
				  <dd><%= resource.authors %></dd><br/>
				  <dd><%= resource.description %></dd>
			  </dl>
		  </td>
		  
		  <td class="list_actions">
        	  <%= link_to 'Show', resource %><br/>
        	  <%= link_to 'Edit', edit_resource_path(resource) %><br/>
        	  <%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %>
      	  </td>
	  </tr>
    <% end %>
    </table>
    <br />

