<h1>Listing resources</h1>

<table>
<% @resources.each do |resource| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= resource.name %></dt>
        <dd><%= truncate(strip_tags(resource.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', resource %><br/>
      <%= link_to 'Edit', edit_resource_path(resource) %><br/>
      <%= link_to 'Destroy', resource, method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New product', new_resource_path %>
