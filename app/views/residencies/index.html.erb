<% title "Residencies" %>
<div class = "sites">
  <h1> <%= yield(:title) %> </h1>
</div>

<div class="graphics">
  <form accept-charset="UTF-8" action="/residencies" method="get" name="commit" class="form-inline">
    <div class="form-group">
    <input type="search" name="search" class="input-large" id="search" placeholder="Search">
    </div>
     <button type="submit" style="margin:1em" class="btn btn-primary ">Search <%= @residencies.length%> Residencies </button>
     <%= link_to "List all Residencies", "/residencies", class: "btn btn-danger " %>
  </form>
</div>
<br>

  <table class="pretty">
    <thead>
      <tr>
   <!-- <th><%= sortable "Id" %></th> -->
        <th><%= sortable  "state" %></th>
        <th><%= sortable  "program" %></th>
      </tr>         
    </thead>
    <tbody>
      <% @residencies.each do |residency| %>
        <tr>
          <td><%= residency.state %></td>
          <td><%= external_link_to residency.program, residency.website %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

