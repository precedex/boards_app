                  <a href="<%= movie.url %>" target = "_blank" class="btn btn-primary btn-block" role="button"><%= movie.title %></a>
                  <% end %>
                </div>
              </div>        
            </div>
            
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a href='#mask' class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-airway">
                    Mask Ventilation
                  </a>
                </h4>
              </div>

              <div id="mask" class="panel-collapse collapse">
                <div class="panel-body">
                  <% @mask.each do |movie| %> 
                  <a href="<%= movie.url %>" target = "_blank" class="btn btn-primary btn-block" role="button"><%= movie.title %></a>
                  <% end %>
                </div>
              </div>        
            </div>
            
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a href='#advanced' class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-airway">
                    Advanced Techniques
                  </a>
                </h4>
              </div>

              <div id="advanced" class="panel-collapse collapse">
                <div class="panel-body">
                  <% @advanced_airway.each do |movie| %> 
