<% title "Airway Management" %>
<div class = "sites">
  <h1> <%= yield(:title) %> </h1>
</div>

<div class="movies">
  <div class="panel-group" id="accordion"> 
    <div class="panel panel-info"> 
      <div class="panel-heading"> 
        <h3 class="panel-title">
          <a href='#airway' class="accordion-toggle" data-toggle="collapse" data-parent="#accordion">
            Airway Management Videos
          </a>
        </h3>
      </div>
  
      <div id="airway" class="panel-collapse collapse"> 
        <div class="panel-body">
          <div class="panel-group" id="accordion-airway">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a href='#intubation-adult' class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-airway">
                    Endotracheal Intubation (adult)
                  </a>
                </h4>
              </div>

              <div id="intubation-adult" class="panel-collapse collapse">
                <div class="panel-body">
                  <% @intubation_adult.each do |movie| %> 
                  <a href="<%= movie.url %>" target = "_blank" class="btn btn-primary btn-block" role="button"><%= movie.title %></a>
                  <% end %>
                </div>
              </div>         
            </div>
            
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a href='#intubation-pediatric' class="accordion-toggle" data-toggle="collapse" data-parent="#accordion-airway">
