<div class="questions">
<p>
	There are <%= @questions.length %> questions that match your search.
</p>
<table>
    <% @questions.each do |question| %>
		  <td class="list_description">
			  <dt> <%= question.stem %></dt></br>
			
					  <dd><%= question.option_a%></dd>
					  <dd><%= question.option_b%></dd>
					  <dd><%= question.option_c%></dd>
					  <dd><%= question.option_d%></dd>
					  <dd><%= question.option_e%></dd> </br>
			
				   <a href="#" class="btn btn-info" data-toggle="tooltip" 					data-placement="right" data-trigger="hover click" 
				   title= "<%= question.answer.upcase %>">
				   Reveal answer</a>		   
		  </td>
		  <!--
