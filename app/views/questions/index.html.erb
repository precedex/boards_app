<% title "Questions" %>

<div class="questions">
  <h1>
    <%= @questions.length %> questions match your search.
  </h1>
  
  <% @questions.each do |question| %>
    <% if question.exam %>
      <% if question.exam == "BASIC"%>
      <%=   link_to question.exam,  "questions?stems_checkbox=1&choices_checkbox=1&search=&shuffle_checkbox=1&exam=1&topic_id=11", class: "btn button2" %>
      <% else %>
      <%=   link_to question.exam, "questions?stems_checkbox=1&choices_checkbox=1&search=&shuffle_checkbox=1&exam=2&topic_id=11", class: "btn button2" %>
      <% end %>
      <%= render partial: "topic", collection: question.topics  %>
    <% end %>
    
    <p> <%= question.stem %> </p>
    
  	<% unless question.image.blank? %>
      <div class="center"> <%= image_tag(question.image) %> </div>
    <% end %>

    <ul>
      <li> <%= question.option_a %> </li>
      <li> <%= question.option_b %> </li>
      <li> <%= question.option_c %> </li>
      <li> <%= question.option_d %> </li>
      <li> <%= question.option_e %> </li>
    </ul>
    
   <!--
    <div class="list_actions">
      <%= link_to 'Show', question %>
      <%= external_link_to 'Edit', edit_question_path(question) %>
      <%= external_link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= external_link_to 'New', new_question_path %>
    </div>
  -->
    
      
    <br>
    
    <a class="btn button3" data-placement="right" data-toggle="tooltip" data-trigger="hover click" style="float:left" href="#" title="<%= question.answer.upcase %>"> Reveal answer  
    </a>
    <br><br>
    <hr>
  	
  <% end %>

  <script>
    $('.button3').tooltip();
  </script>
</div>
